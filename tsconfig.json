{
  "compilerOptions": {
    "module": "ES2020",
    "outDir": "./build/dist/mjs",
    "baseUrl": ".",
    "alwaysStrict": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "ES2020",
    "noResolve": false,
    "diagnostics": false,
    "extendedDiagnostics": false,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "newLine": "lf"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "jest.config.main.ts",
    "build",
    "build_cache",
    "node_modules",
    "spec",
    "spec_utils",
    "spec_data",
    "coverage"
  ]
}
